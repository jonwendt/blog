<%#= render :partial => "partials/header" %>
<div class="jumbotron">
  <h2><%= link_to title_with_explicit_label(@playlist), @playlist.download_link, :target => "_blank" %></h2>
</div>

<hr>

<div class="row">
  <div class="col-md-6 col-xs-12"><%= @playlist.player_html.html_safe %></div>
  <div class="col-md-6 col-xs-12">
    <%= @playlist.content.html_safe %>
    <br><br>
    <p>Tags: <%= @playlist.tags %></p>
  </div>
</div>

<br>

<%= link_to "Edit Playlist", edit_playlist_path(@playlist), :class => "btn btn-primary" if @is_admin %>

<script>
  $('.playlist').mouseenter(function() {
    $(this).find('.play-button').fadeIn(200);
  }).mouseleave(function() {
    $(this).find('.play-button').fadeOut(200);
  });
</script>