<%#= render :partial => "partials/header" %>
<div class="jumbotron">
  <h2><%= link_to title_with_explicit_label(@mixtape), @mixtape.download_link, :target => "_blank" %></h2>
</div>

<hr>

<div class="row">
  <div class="col-md-5" style="max-width: 300px;"><%= @mixtape.player_html.html_safe %></div>
  <div class="col-md-7">
    <%= @mixtape.content.html_safe %>
    <br><br>
    <p>Tags: <%= @mixtape.tags %></p>
  </div>
</div>

<br>

<%= link_to "Edit Mixtape", edit_mixtape_path(@mixtape), :class => "btn btn-primary" if @is_admin %>