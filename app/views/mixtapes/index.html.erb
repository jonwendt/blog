<%= render :partial => "partials/header", locals: { :text => "Mixtapes" } %>

<div class="row">
  <% @mixtapes.each do |mixtape| %>
    <div class="col-md-6">
      <h3 class='post-title'><%= link_to title_with_explicit_label(mixtape), mixtape_path(mixtape.id) %></h3>
      <p><%= mixtape.player_html.html_safe %></p>
      <p><%= link_to "Read more &raquo;".html_safe, mixtape_path(mixtape.id), :class => "btn btn-default" %></p>
      
    </div>
  <% end %>
</div>
<br>