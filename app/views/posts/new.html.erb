<%= render :partial => 'header' %>

<%= form_for @post do |f| %>
  <div class='row-fluid'>
    <div class='span3'></div>
    <div class='span6'>
      <%= render 'form', f: f %>
    </div>
    <div class='span3'></div>
  </div>
  <%= f.submit %>
  <% f.project_id = params[:project_id] if params[:project_id] %>
<% end %>

<script>
  $(document).ready(function() {
    $('ol.post-order').sortable();
  });
</script>