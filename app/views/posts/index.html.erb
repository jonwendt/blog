<%= render :partial => "partials/header", locals: { :text => "Jon's Thoughts On..." } %>

<div class="row">
  <div class="col-md-3 sidebar"><%= render :partial => "sidebar" %></div>

  <div class="col-md-9">
    <% @posts.each do |post| %>
      <h3 class="post-title"><%= post.title %></h3>
      <p><%= post.preview.html_safe %></p>
      <p><%= link_to "Read more &raquo;".html_safe, post_path(post.id), :class => "btn btn-default" %></p>
      
      <% if post != @posts.last %>
        <hr><br>
      <% end %>
    <% end %>
  </div>
</div>

<br>