<!-- Jumbotron -->
<div class="jumbotron">
  <h1>Jon's Thoughts On...</h1>
</div>

<hr>

<% @posts.each do |post| %>
  <div class="row-fluid">
    <div class="span3"></div>
    <div class="span6">
        <h2><%= post.title %></h2>
        <p><%= post.preview %></p>
        <p><%= link_to "Read more &raquo;".html_safe, post_path(post.id), :class => "btn" %></p>
        <hr>
    </div>
    <div class="span3"></div>
  </div>
<% end %>

<br/>

<%= link_to "New Post", new_post_path, :class => "btn btn-primary" %>